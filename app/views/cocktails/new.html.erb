
<div class="formbackground" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1531387367216-681093c0279b?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=73ca72de11ae9cd2fa7367dc1ee76705&auto=format&fit=crop&w=2816&q=80');">
    <div class="form-center">
      <%= simple_form_for(@cocktail, {class: "formsignin"}) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>

        <%= f.submit %>
      <% end %>
    </div>
</div>
